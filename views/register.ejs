<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Hotel.me</title>
<link rel="stylesheet" href="/css/register_style.css">
<section class="container"></section>

<style>
  /* Add a background image to the body */
  body {
    background-image: url('/images/bg_image.jpg'); /* Use bg_image.jpg */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  /* Center and style the login form */
  .login {
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
    padding: 40px;
    border-radius: 8px;
    max-width: 500px;
    margin: 100px auto;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .login img {
    width: 150px;
    margin-bottom: 20px;
  }

  .login h1 {
    font-size: 28px;
    margin-bottom: 20px;
    color: #333;
  }

  .login p {
    margin: 12px 0;
  }

  .login input[type="text"], 
  .login input[type="email"], 
  .login input[type="password"] {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box; /* Ensure padding doesn't break layout */
    font-size: 16px;
  }

  .login .submit input {
    width: 100%;
    padding: 12px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .login .submit input:hover {
    background-color: #45a049;
  }

  .login p a {
    color: #007BFF;
    text-decoration: none;
    font-size: 16px;
  }

  .login p a:hover {
    text-decoration: underline;
  }

  /* Responsive design adjustments */
  @media screen and (max-width: 768px) {
    .login {
      padding: 30px;
      margin: 50px auto;
      width: 90%;
    }

    .login h1 {
      font-size: 24px;
    }

    .login input {
      font-size: 14px;
    }

    .login .submit input {
      font-size: 14px;
    }
  }
</style>

<div class="login">
  <img src="/images/logo.png" alt="Hotel.me Logo">
  <h1>Register</h1>
  <form method="post" action="/users/register">
    <p><input type="text" name="fname" placeholder="First Name" required></p>
    <p><input type="text" name="lname" placeholder="Last Name" required></p>
    <p><input type="email" name="email" placeholder="Email" required></p>
    <p><input type="text" name="mobile" placeholder="Mobile" required></p>
    <p><input type="password" name="password" placeholder="Password" required></p>
    <p><input type="password" name="password2" placeholder="Confirm Password" required></p>
    <p class="submit"><input type="submit" name="submit" value="Register"></p>
  </form>
</div>

<div class="login">
  <p>Have an account? <a href="login">Login Here</a></p>
</div>
